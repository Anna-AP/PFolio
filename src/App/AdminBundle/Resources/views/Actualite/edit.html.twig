{% extends "AppAdminBundle::index.html.twig" %}

{% block title %} Actuality - Edit {% endblock %}

{% block body %}
		<div class="container col-lg-10 col-lg-offset-1 content_bo">

			<div class="row">
				<h1 class="text-center title_bo">Actuality <i class="fa fa-chevron-right fa-1"></i> Edit</h1>
			</div>
			
			<div class="well">
				{{ form_start(form, {'attr' : { 'class' : 'form-horizontal'}} ) }}
				{{ form_errors(form) }}
				<div class="form-group form_row">
					<div class="row">
						{{ form_label(form.title, 'Nom de l\'article', {'label_attr': { 'class' : 'col-sm-2 control-label' }} ) }}
						{{ form_errors(form.title) }}
						<div class="col-sm-8">
							{{ form_widget(form.title, { 'attr' : {'class' : 'form-control'}} ) }}
						</div>
					</div>
					<div class="row">
						{{ form_label(form.visuel, 'Visuel', {'label_attr': { 'class' : 'col-sm-2 control-label' }} ) }}
						{{ form_errors(form.visuel) }}
						<div class="col-sm-3">
							{{ form_widget(form.visuel, { 'attr' : {'class' : 'form-control'}} ) }}
						</div>
						{# {{ form_label(form.publish, 'Publish', {'label_attr': { 'class' : 'col-sm-2 control-label' }} ) }}
						{{ form_errors(form.publish) }}
						<div class="col-sm-1">
							{{ form_widget(form.publish, { 'attr' : {'class' : 'form-control'}} ) }}
						</div> #}
					</div>
					<div class="form-group">
						{{ form_label(form.text, 'Description', {'label_attr': { 'class' : 'col-sm-2 control-label' }} ) }}<br><br>
						{{ form_errors(form.text) }}
						{{ form_widget(form.text, { 'attr' : {'class' : 'form-control col-sm-4'}} ) }}
					</div>
				</div>
				{# {{ form_widget(form.created, {'attr' : {'value' : 'now'|date('Y-m-d') }} ) }} #}
				{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary save'}}) }}
			  
				{{ form_rest(form) }}
  				{{ form_end(form) }} 
			</div>
		</div>
{% endblock %}