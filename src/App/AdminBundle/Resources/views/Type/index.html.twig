			<div class="row">
				<h1 class="text-center title_bo">Profils</h1>
			</div>
			
			<div class="row">
				<a href="{{ path('app_admin_profils_new') }}" class="btn create pull-right" role="button">Ajouter un profil</a>
			</div>
			
	        <div class="table-responsive table-challenge">
	            <table class="table table-striped table-hover table-bordered records_list">
	                <thead>
	                <tr>
	                	<th scole="col">Id</th>
	                    <th scope="col">Title</th>
	                    <th scope="col"></th>
	                </tr>
	                </thead>
	                <tbody>
		                {% for prof in profils %}
		                    <tr id="profil{{ prof.id }}">
