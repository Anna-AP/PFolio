{% extends "AppAdminBundle::index.html.twig" %}

{% block body %}
		<div class="container col-lg-10 col-lg-offset-1 content_admin">

			<div class="row">
				<h1 class="text-center title_admin">{% block title %} {{ 'Thèmes' }} <i class="fa fa-chevron-right"></i> {{'edit'}} {% endblock %}</h1>
			</div>

			<div class="row">
				<div class="col-lg-12 subnav text-center">
					<a href="{{ path('app_admin_actualite_show') }}">Actualité</a>
					<a href="{{ path('app_admin_realisations_show') }}">Réalisations</a>
					<a href="{{ path('app_admin_support_show') }}">Support</a>
					<a href="{{ path('app_admin_user_show') }}">User</a>
					<a href="{{ path('app_admin_theme_show') }}">Thèmes</a>
					<a href="{{ path('app_admin_profils_show') }}">Profils</a>
					<a href="{{ path('app_admin_forum_show') }}">Forum</a>
					<a href="{{ path('app_admin_commentaires_show') }}">Commentaires</a>
				</div>
			</div>
			
			<div class="well">
				{{ form_start(form, {'attr' : { 'class' : 'form-horizontal'}} ) }}
				{{ form_errors(form) }}

				<div class="form-group">
					{{ form_label(form.title, 'Nom du thème', {'label_attr': { 'class' : 'col-sm-2 control-label' }} ) }}
					{{ form_errors(form.title) }}
					<div class="col-sm-8">
						{{ form_widget(form.title, { 'attr' : {'class' : 'form-control'}} ) }}
					</div>
				</div>
				<div class="save">
					{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary save'}}) }}
				</div>

				{{ form_rest(form) }}
  				{{ form_end(form) }}
			</div>
		</div>
{% endblock %}