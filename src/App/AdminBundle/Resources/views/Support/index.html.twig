{% extends "AppAdminBundle::index.html.twig" %}

{% block body %}
		<div class="container col-lg-10 col-lg-offset-1 content_admin">

			<div class="row">
				<h1 class="text-center title_admin">{% block title %} {{ 'Support' }} {% endblock %}</h1>
			</div>

			<div class="row">
				<div class="col-lg-12 subnav text-center">
					<a href="{{ path('app_admin_actualite_show') }}">Actualité</a>
					<a href="{{ path('app_admin_realisations_show') }}">Réalisations</a>
					<a href="{{ path('app_admin_support_show') }}">Support</a>
					<a href="{{ path('app_admin_user_show') }}">User</a>
					<a href="{{ path('app_admin_theme_show') }}">Thèmes</a>
					<a href="{{ path('app_admin_profils_show') }}">Profils</a>
					<a href="{{ path('app_admin_forum_show') }}">Forum</a>
					<a href="{{ path('app_admin_commentaires_show') }}">Commentaires</a>
				</div>
			</div>
			
			<div class="row">
				<a href="{{ path('app_admin_support_new') }}" class="btn create pull-right" role="button">Ajouter un support</a>
			</div>

	        <div class="table-responsive table-challenge">
	            <table class="table table-striped table-hover table-bordered records_list">
	                <thead>
	                <tr>
	                    <th scope="col">Title</th>
	                    <th scope="col">Thème</th>
	                    <th scope="col">Texte</th>
	                    <th scope="col">Ordre</th>
	                    <th scope="col">Publish</th>
	                    <th scope="col">Action</th>
	                </tr>
	                </thead>
	                <tbody>
		                {% for supp in support %}
		                    <tr id="supp{{ supp.id }}">
		                        <td style="width: 10%;" >{{ supp.title }}</td>
		                        <td style="width:20%;">{{ supp.theme.title }}</td>
		                        <td style="width: 45%;">{{ supp.text|truncate(100)|raw }}</td>
		                        <td style="width: 10%;">Ordre</td>
		                        <td style="width:5%;text-align:center;">{{ supp.publish }}</td>
		                        <td style="width: 10%;text-align:center;">
		                            <div class="btn-challenge">
	                                    <a class="btn btn-default btn-sm" href=" {{ path('app_admin_support_edit', {id: supp.id}) }}" alt="{{ 'Modifier'|trans({}, 'admin') }}">
	                                        <i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i>
	                                    </a>
	                                    <a class="btn btn-default btn-sm" onclick="return confirm('Êtes vous sur de vouloir supprimer ce support ?')" href="{{ path('app_admin_support_delete', {id: supp.id}) }}" alt="{{ 'Supprimer'|trans({}, 'admin') }}">
	                                        <i class="fa fa-times fa-lg" aria-hidden="true"></i>
	                                    </a>	                                
		                            </div>
		                        </td>
		                    </tr>
	                	{% endfor %}
	                </tbody>
	            </table>
	        </div>
		</div>
{% endblock %}