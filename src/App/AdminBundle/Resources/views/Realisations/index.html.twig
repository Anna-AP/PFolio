{% extends "AppAdminBundle::index.html.twig" %}

{% block title %} Projects {% endblock %}

{% block body %}
		<div class="container col-lg-10 col-lg-offset-1 content_bo">

			<div class="row">
				<h1 class="text-center title_bo">Projects</h1>
			</div>

			<div class="row">
				<a href="{{ path('app_admin_realisations_new') }}" class="btn create pull-right" role="button">Ajouter un projet</a>
			</div>
			
	        <div class="table-responsive table-challenge">
	            <table class="table table-striped table-hover table-bordered records_list">
	                <thead>
	                <tr>
	                    <th scope="col"></th>
	                    <th scope="col">Title</th>
	                    <th scope="col">Description</th>
	                    <th scope="col">Publish</th>
	                    <th scope="col"></th>
	                </tr>
	                </thead>
	                <tbody>
		                {% for real in realisations %}
		                    <tr id="real_{{ real.id }}">
		                        <td style="width: 10%;" >
				                    <img src="{{ asset('images/'~real.logo) }}" class="img-responsive" width="80" height="80">
		                        </td>
		                        <td style="width:20%;">{{ real.title }}</td>
		                        <td style="width: 55%;">{{ real.text|truncate(100)|raw }}</td>
		                        <td style="width:5%;text-align:center;">{{ real.publish }}</td>
		                        <td style="width: 10%;text-align:center;">
		                            <div class="btn-challenge">
	                                    <a class="btn btn-default btn-sm" href=" {{ path('app_admin_realisations_edit', {id: real.id}) }}" alt="{{ 'Modifier'|trans({}, 'admin') }}">
	                                        <i class="fa fa-pencil-square-o fa-lg" aria-hidden="true"></i>
	                                    </a>
	                                    <a class="btn btn-default btn-sm" onclick="return confirm('Êtes vous sur de vouloir supprimer cette réalisation?')" href="{{ path('app_admin_realisations_delete', {id: real.id}) }}" alt="{{ 'Supprimer'|trans({}, 'admin') }}">
	                                        <i class="fa fa-times fa-lg" aria-hidden="true"></i>
	                                    </a>	                                
		                            </div>
		                        </td>
		                    </tr>
	                	{% endfor %}
	                </tbody>
	            </table>
	        </div>
        {# {{ knp_pagination_render(paginator) }} #}
		</div>
{% endblock %}